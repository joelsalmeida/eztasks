generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Todo {
  id          String  @id @default(uuid())
  title       String  @db.VarChar(255)
  description String?
  user        User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId      String
}

model User {
  id       String @id @default(uuid())
  name     String
  email    String @unique
  password String
  todos    Todo[]
}
