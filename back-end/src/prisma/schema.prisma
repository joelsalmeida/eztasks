generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Todo {
  id          Int     @id @default(autoincrement())
  title       String  @db.VarChar(255)
  description String?
  user        User    @relation(fields: [userId], references: [id])
  userId      Int
}

model User {
  id    Int     @id @default(autoincrement())
  name  String
  email String  @unique
  password String
  todos Todo[]
}
